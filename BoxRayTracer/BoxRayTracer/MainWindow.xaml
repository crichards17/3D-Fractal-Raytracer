                    <TextBox x:Name="imgTitle"
                    Text=""
                    Grid.Column="0" 
                    Grid.Row="0" 
                    HorizontalAlignment="Stretch" 
                    Margin="5,0,5,5"
                    TextWrapping="Wrap" 
                    VerticalAlignment="Bottom"
                    />
                    <Button x:Name="btn_save_img" 
